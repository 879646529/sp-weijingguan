.module-article {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2px 10px 2px rgba(0,0,0,0.35);
}

.module-article-main {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
}
.module-article-main-title {
  padding: 20rpx 0;
  font-weight: bold;
  font-size: 32rpx;
}
.module-article-main-content {
  padding: 20rpx 0;
  color: #666;
}
.module-article-main-content-all {
  color: #09f;
}
.module-article-image-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.module-article-image {
  width: 180rpx;
  height: 180rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  /* box-shadow: 0 5px 10px 1px rgba(0,0,0,0.35); */
}
.module-article-footer {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  padding: 20rpx 0;
  justify-content: space-between;
}
.module-article-info {
  display: flex;
  flex-direction: row;
}
.module-article-info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  background-color: red;
}
.module-article-info-text {
  margin-left: 10rpx;
  color: #666;
}