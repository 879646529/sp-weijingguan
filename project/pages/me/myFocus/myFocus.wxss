.focus-container {
  padding: 0 30rpx;
}
.focus-list {
  display: flex;
  flex-direction: column;
}
.focus-item {
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1px solid #DCDFE6;
}
.focus-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  vertical-align: middle;
}
.focus-nickname {
  margin-left: 50rpx;
  color: #303133;
  vertical-align: middle;
}
.unfocus-btn {
  float: right;
  width: 160rpx;
  height: 50rpx;
  margin-top: 35rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  background-color: #409EFF;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
}